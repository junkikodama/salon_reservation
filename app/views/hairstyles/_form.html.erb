<%= form_with model: @hairstyle, local: true do |f|%>
  <div class="field">
    <%= f.label :hairstylename, "ヘアスタイル名" %><br />
    <%= f.text_field :hairstylename, id:"hairstyle_hairstylename" %>
  </div>

  <div class="field">
    <%= f.label :detail, "ヘアスタイルについて" %><br />
    <%= f.text_area :detail, class: :form__text, id:"hairstyle_detail" %>
  </div>

  <div class="field">
    <%= f.label :image, "ヘアスタイル写真" %><br />
    <%= f.file_field :image, id:"hairstyle_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>